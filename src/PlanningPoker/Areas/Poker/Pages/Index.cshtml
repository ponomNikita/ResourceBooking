@page
@model PlanningPoker.IndexModel
@{
    ViewData["Title"] = "Poker";
}

<div class="container">
    
    <h4>Start new poker session</h4>

    <form id="newSession" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        
        <div class="input-group">
            <input  asp-for="Command.Name" type="text" class="form-control" placeholder="Name">
            <div class="input-group-append">
                <button type="submit" form="newSession" class="btn btn-primary">
                    <i class="fas fa-check"></i>
                    Start
                </button>
            </div>
        </div>
        
        <span asp-validation-for="Command.Name" class="text-danger"></span>
    </form>
</div>
